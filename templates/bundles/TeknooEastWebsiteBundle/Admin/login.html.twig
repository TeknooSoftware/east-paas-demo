{# app/Resources/TeknooEastWebsiteBundle/views/Admin/index.html.twig #}

{% extends '@TeknooEastWebsite/Admin/layout.html.twig' %}

{% block navbarButtons '' %}

{% block content %}
    <div class="row justify-content-md-center">
        <div class="col-md-5">
            <form action="{{ path('admin_paas_check') }}" method="post" class="form-horizontal">
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" type="text" id="email" name="_username" placeholder="Email" value="" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" id="password" placeholder="Password" name="_password" />
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}