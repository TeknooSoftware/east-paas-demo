{# app/Resources/TeknooEastWebsiteBundle/views/Admin/list.html.twig #}

{% extends '@TeknooEastWebsite/Admin/layout.html.twig' %}

{% block content %}
    <div class="row title">
        <div class="col-12 col-md-8">
            <h1>{% block listTitle '' %}</h1>
        </div>
        <div class="col-12 col-md-4 text-right">
            {% block newButton '' %}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="bs-component">
                <table class="table table-striped table-hover ">
                    {% block listTableHeader '' %}
                    {% block listTableBody %}
                        <tbody>
                        {% if objectsCollection is defined %}
                            {% for object in objectsCollection %}
                                {% block listTableRow '' %}
                            {% else %}
                                {% block listTableEmpty'' %}
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    {% endblock %}
                </table>
            </div>
        </div>
    </div>
    {% if pageCount > 1 %}
    <nav>
        <ul class="pagination">
            {% if page > 1 %}
                <li class="page-item"><a class="page-link" href="?page={{ (page-1) }}">Previous</a></li>
            {% endif %}
            {% for pageNumber in 1..pageCount %}
            <li class="page-item{% if page == pageNumber %} active{% endif %}"><a class="page-link" href="?page={{ pageNumber }}">{{ pageNumber }}</a></li>
            {% endfor %}
            {% if page < pageCount %}
            <li class="page-item"><a class="page-link" href="?page={{ (page+1) }}">Next</a></li>
            {% endif %}
        </ul>
    </nav>
    {% endif %}
{% endblock %}
