{# app/Resources/TeknooEastWebsiteBundle/views/Admin/layout.html.twig #}
{% block html %}
{% block docktype %}
<!DOCTYPE html>
{% endblock %}
<html{% block htmlArguments %} lang="en"{% endblock %}>
    {% block head %}
    <head>
        <!-- Required meta tags -->
        {% block meta %}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% endblock %}
        <title>{% block titleHead %}Teknoo PaaS - Admin{% endblock %}</title>
        {% block stylesheets %}
        <!-- Bootstrap CSS -->
        <link rel="stylesheet"
              href="{{ '/css/bootstrap.min.css' }}" />
        <link rel="stylesheet"
              type="text/css"
              href="{{ '/trumbowyg/ui/trumbowyg.min.css' }}" />
        <link rel="stylesheet"
              href="{{ '/css/app.min.css' }}" />
        {% block additionalStyleSheets '' %}
        {% endblock %}
        <link rel="apple-touch-icon" href="/img/apple-touch-icon.png">
        <link rel="icon" href="/img/favicon.png">
    </head>
    {% endblock %}
    {% block body %}
    <body {% block bodyArguments '' %}>
        {% block navbar %}
            <div class="navbar navbar-dark bg-dark navbar-expand-md">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Teknoo Software</a>
                    </div>
                    {% block navbarButtons %}
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">CMS</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{ path('_teknoo_website_admin_item_list') }}">Items</a>
                                    <a class="dropdown-item" href="{{ path('_teknoo_website_admin_type_list') }}">Types</a>
                                    <a class="dropdown-item" href="{{ path('_teknoo_website_admin_content_list') }}">Contents</a>
                                    <a class="dropdown-item" href="{{ path('_teknoo_website_admin_media_list') }}">Media</a>
                                </div>
                            </li>
                            <li class="nav-item{% block menuAccountsClass '' %}">
                                <a class="nav-link" href="{{ path('admin_account_list') }}">Accounts</a>
                            </li>
                            <li class="nav-item{% block menuProjectsClass '' %}">
                                <a class="nav-link" href="{{ path('admin_project_list') }}">Projects</a>
                            </li>
                            <li class="nav-item{% block menuJobsClass '' %}">
                                <a class="nav-link" href="{{ path('admin_job_list') }}">Jobs</a>
                            </li>
                            <li class="nav-item{% block menuUsersClass '' %}">
                                <a class="nav-link" href="{{ path('_teknoo_website_admin_user_list') }}">Users</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a class="nav-link" href="{{ path('admin_website_logout') }}">Logout</a></li>
                        </ul>
                    </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
        <div class="container">
            {% block container %}
                <div class="bs-docs-section">
                    {% block title '' %}
                    {% block flashMessage '' %}
                    {% block content '' %}
                </div>
            {% endblock %}
        </div>
        {% block scripts %}
        <script src="{{ '/js/jquery-3.2.1.min.js' }}"></script>
        <script src="{{ '/js/popper.min.js' }}"></script>
        <script src="{{ '/js/bootstrap.min.js' }}"></script>
        <script src="{{ '/trumbowyg/trumbowyg.js' }}"></script>
        <script src="{{ '/js/admin.js' }}"></script>
        <script src="{{ '/js/subform.js' }}"></script>
        {% block additionalScripts '' %}
        {% endblock %}
    </body>
</html>
{% endblock %}
{% endblock %}