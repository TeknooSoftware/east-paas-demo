{# app/Resources/TeknooEastWebsiteBundle/views/AdminUser/new.html.twig #}

{% extends '@TeknooEastWebsite/Admin/form.html.twig' %}

{% block formTitle 'New user' %}

{% block crudFormFields %}
    {{ form_errors(formView) }}
    <div class="form-group row">
        {{ form_row(formView.firstName) }}
        {{ form_row(formView.lastName) }}
    </div>
    <div class="form-group row">
        {{ form_row(formView.roles, {"largeRow": true}) }}
    </div>
    <div class="form-group row">
        {{ form_row(formView.email, {"largeRow": true}) }}
    </div>
    <div class="form-group row">
        {{ form_row(formView.password) }}
    </div>
{% endblock %}

{% block menuUsersClass ' active' %}
